
<div class="container mt-5">
  <p><strong>Places detail</strong></p>

  <div class="row">
    <div class="col">
      <div class="card p-3 mt-3">
        <div class="card-product">
          <img src="<%= @place.picture_url %>"/>
          <div class="card-product-infos">
            <h2><%= @place.name %> </h2>
            <p><%= @place.address%> </p>
