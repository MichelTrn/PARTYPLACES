<h1>New booking for <%= @place.name %></h1>

<%= simple_form_for [@place, @booking] do |f| %>
  <%= f.input :begin_date,
    as: :string,
    input_html: { data: { controller: "datepicker" } }%>
  <%= f.input :end_date,
    as: :string,
    input_html: { data: { controller: "datepicker" } }%>
  <%= f.submit "Book this place", class: "btn btn-primary" %>
<% end %>
