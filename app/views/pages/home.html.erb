<%= render 'shared/banner' %>

<% if user_signed_in? %>
    <p>Hello <%= current_user.first_name %></p>
    <div class="container">
      <h2 class="mt-3">Places of <%= current_user.first_name %></h1>
      <div class="row">
        <%@places_user.each do |place|%>
          <div class="col-md-4">
            <div class="card p-3 mt-3">
              <h3><%= link_to place.name, place_path(place) %></h3>
              <%= image_tag place.picture_url, class: "object-fit: cover" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <p>You are not logged in</p>
    <div class="container">
      <h2 class="mt-3">All places</h1>
      <div class="row">
        <%@places.each do |place|%>
          <div class="col-md-4">
            <div class="card p-3 mt-3">
              <h3><%= link_to place.name, place_path(place) %></h3>
              <%= image_tag place.picture_url, class: "object-fit: cover" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
